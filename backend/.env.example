# OpenAI API key for book analysis (GPT-3.5-turbo)
OPENAI_API_KEY=sk-your-openai-key-here

# GeminiGen.ai API key for image generation
GEMINIGEN_API_KEY=your-geminigen-key-here

# GeminiGen webhook secret (optional, for webhook verification)
GEMINIGEN_WEBHOOK_SECRET=

# Reference image search providers (each key enables that provider; more keys = more engines active)
# Unsplash: Access Key from https://unsplash.com/oauth/applications
UNSPLASH_ACCESS_KEY=

# SerpAPI: key from https://serpapi.com/ (used by SerpAPI and DeviantArt providers)
SERPAPI_KEY=
# Legacy / alternative name
SEARCH_API_KEY=

# Pexels: API key from https://www.pexels.com/api/
PEXELS_API_KEY=

# Pixabay: API key from https://pixabay.com/api/docs/
PIXABAY_API_KEY=

# Openverse and Wikimedia: no API key required (always available if no key needed)
# DeviantArt uses SERPAPI_KEY above

# Database URL (default: SQLite)
DATABASE_URL=sqlite:///./app.db
